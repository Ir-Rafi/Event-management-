<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="DashboardController" stylesheets="@dashboard_style.css">

    <!-- Main content (keeps your BorderPane structure) -->
    <BorderPane fx:id="rootPane">

        <!-- Top Bar -->
        <top>
            <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="20">
                <padding><Insets top="15" bottom="15" left="20" right="20"/></padding>

                <Button text="â˜°" onAction="#toggleMenu" styleClass="menu-toggle"/>

                <Label text="Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>

                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
        </top>

        <!-- Main Content Area -->
        <center>
            <VBox fx:id="rightPane" styleClass="right-pane" spacing="15" style="-fx-padding: 30;" VBox.vgrow="ALWAYS">

                <!-- Dashboard Title -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="DASHBOARD" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 13px; -fx-font-weight: bold;"/>
                    <Label text="/" style="-fx-text-fill: rgba(255,255,255,0.5);"/>
                    <Label text="HOME" style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 13px; -fx-font-weight: bold;"/>
                </HBox>

                <!-- Events Section -->
                <Label text="My Events" styleClass="events-title" style="-fx-text-fill: white; -fx-font-size: 22px;"/>

                <!-- Events List with Scroll -->
                <ScrollPane fx:id="eventsScroll" fitToWidth="true" VBox.vgrow="ALWAYS"
                            style="-fx-background-color: transparent; -fx-border-color: transparent;">
                    <VBox fx:id="eventsListBox" spacing="20" style="-fx-background-color: transparent;"/>
                </ScrollPane>
            </VBox>
        </center>

    </BorderPane>

    <!-- Sliding Menu Overlay (sits above BorderPane because of StackPane order) -->
    <StackPane fx:id="slideMenuPane" visible="false" mouseTransparent="true" managed="true">
        <!-- Overlay (covers whole scene) -->
        <Region fx:id="menuOverlay" style="-fx-background-color: rgba(0,0,0,0.4);" />

        <!-- Sliding Menu (aligned to left of StackPane) -->
        <VBox fx:id="slideMenuBox" spacing="15" alignment="TOP_LEFT"
              style="-fx-background-color: #1a1a2e; -fx-padding: 30;"
              translateX="-280">
            <!-- User Info Section -->
            <VBox spacing="10" alignment="CENTER_LEFT">
                <StackPane fx:id="profilePicStack" styleClass="profile-pic" alignment="CENTER"/>

                <Label fx:id="nameLabel" styleClass="name-label" text="User Name"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label fx:id="emailLabel" styleClass="email-label" text="user@email.com"
                       style="-fx-text-fill: white; -fx-font-size: 12px;"/>

                <Separator style="-fx-background-color: rgba(255,255,255,0.2);"/>

                <Label styleClass="small-title" text="DEPARTMENT" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
                <Label fx:id="deptLabel" styleClass="big-text" text="ðŸ« Computer Science"
                       style="-fx-text-fill: white; -fx-font-size: 14px;"/>

                <Label styleClass="small-title" text="SESSION" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
                <Label fx:id="sessionLabel" styleClass="big-text" text="ðŸ“š 2023-24"
                       style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            </VBox>

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS"/>

            <!-- Menu Buttons will be added dynamically by controller -->

        </VBox>
    </StackPane>

</StackPane>
