<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="EventViewerController"
      spacing="10"
      alignment="TOP_CENTER"
      prefWidth="600" prefHeight="550"
      stylesheets="@style.css">

    <TextArea fx:id="eventsTextArea" editable="false" wrapText="true" prefWidth="550" prefHeight="500"/>
    <Button fx:id="closeButton" text="Close" onAction="#handleClose" prefWidth="100"/>
</VBox>
